{
  "manifest_version": 3,
  "name": "PhishGuard",
  "version": "1.0",
  "description": "Scan Gmail messages for phishing using the Gmail API and OAuth.",
  "permissions": [
    "identity",
    "scripting",
    "activeTab",
    "storage"
  ],
  "oauth2": {
    "client_id": "875596402669-eu35ok9b47h58c00tk5bcm4aaua6k9mu.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/gmail.readonly"
    ]
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}